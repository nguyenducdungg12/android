<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FDEED"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/TextViewSubjectStudentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Môn Học"
            android:textColor="#000"
            android:textSize="25sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tính chỉ : "
                android:textColor="#000"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/TextViewCreditSubjectStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="333"
                android:textColor="#000"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/subjectstudentinformation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_subject_24"></ImageButton>

</LinearLayout>
