<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FDEED"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/TextViewSubjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên học sinh"
            android:textColor="#000"
            android:textSize="25sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSSV : "
                android:textColor="#000"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/TextViewStudentCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="333"
                android:textColor="#000"
                android:textSize="20sp">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/studentinformation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_subject_24">

    </ImageButton>

    <ImageButton
        android:id="@+id/studentupdate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_update_24">

    </ImageButton>

    <ImageButton
        android:id="@+id/studentdelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_delete_24">

    </ImageButton>

</LinearLayout>
